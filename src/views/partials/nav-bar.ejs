<header>
    <div class="mensaje">
        <div class="reloj">
            <p class="tiempo"></p>
            <br>
            <p class="textoHora">Es la hora de entrenar, ¿tienes el equipamiento necesario?</p>
        </div>
    </div>
    <div class="bar">
        <div class="logo">
            <a href="/">
                <img src="/images/logo-banner/logo-final-ps.png" alt="">
            </a>
        </div>
        <div class="contenedor-lupa">
            <input class="buscador" placeholder="Buscar productos, marcas y más">
            <button class="boton" type="submit">
                <div id="lupita"><i class="fas fa-search"></i></div>
            </button>
        </div>
        <% if (locals.isLogged) { %>
            <div class="icono">
                <a href="/auth/profile/:id"><i class="fas fa-user-circle"></i></a>
                <a href="/products/create"><i class="fas fa-plus-circle"></i></a>
                <a href="/auth/logout"><i class="fas fa-sign-out-alt"></i></a>
                <a href="/cart"><i class="fas fa-shopping-bag"></i></a>
                <% } else { %>
                    <a href="/auth/register"><i class="fas fa-id-card"></i></a>
                    <a href="/auth/login"><i class="fas fa-user"></i></a>
            </div>
            <% } %>
    </div>
</header>
<script type="text/javascript" src="/js/reloj.js"></script>