<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head',{url:"/css/register.css"}) %>

    <body>
        <%- include('../partials/nav-bar') %>
            <main>
        <div class="bord">
            <div class="card">
                <form action="/auth/create" method="post" class="formGroup" enctype="multipart/form-data">
                    <h2>Formulario de Registro</h2>
                    <div class="inputContainer">
                        <label for="">Nombres:</label>
                        <input class="inputRegister" autocomplete="off" type="text" name="name" required>
                    </div>
                    <div class="inputContainer">
                        <label for="">Apellidos:</label>
                        <input class="inputRegister" autocomplete="off" type="text" name="lastName" required>
                    </div>
                    <div class="inputContainer">
                        <label for="">Email:</label>
                        <input class="inputRegister" autocomplete="off" type="email" name="email"  required>
                    </div>
                    <div class="inputContainer">
                        <label for="">Contraseña:</label>
                        <input class="inputRegister" autocomplete="off" type="password" name="password" required>
                    </div>
                    <div class="inputContainer">
                        <label for="">Confirmar Contraseña:</label>
                        <input class="inputRegister" autocomplete="off" type="password" name="passwordRepeat" required>
                    </div>
                    <div class="inputContainer">
                        <label>Imagen de Perfil:</label>
                        <input class="inputImage" type="file" name="userImage" id="userImage" />
                    </div>
                    <input type="submit" class="btn-register" value="Registrar">
                </form>

                <% if (typeof errorMessage !=="undefined" ) { %>
                    <div class="errorBanner">
                        <p>
                            <i class="fas fa-exclamation-triangle"></i>
                            <%= errorMessage %>
                        </p>
                    </div>
                    <% } %>
                </div>
            </div>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>