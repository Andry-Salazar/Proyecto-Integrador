                            <button type="submit" class="mx-2">Compra ahora</button>
                        </form>
                        <% if (locals.userLogged.role==="Administrador" ) { %>
                            <form action="/products/create" method="GET">
                                <button type="submit" class="pink">Crear producto</button>
                            </form>
                            <% } %>
                    </div>
