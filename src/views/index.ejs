                    <% for (const p of destacado) { %>
                        <a href="/products/<%= p.id%>">
                            <div class="card product-shadow m-3" style="width: 24rem;">
                                <div id="carouselExampleControls<%= p.id%>" class="carousel slide"
                                    data-bs-ride="carousel">
                                    <div class="carousel-inner">
                                        <% for(var i=0; i < p.images.length; i++) { %>
                                            <% if (i===0) { %>
                                                <div class="carousel-item active">
                                                    <img src="/images/ropa-deportiva/<%= p.images[i] %>"
                                                        class="d-block img" alt="...">
                                                </div>
                                                <%} %>
                                                    <% if (i!==0) { %>
                                                        <div class="carousel-item">
                                                            <img src="/images/ropa-deportiva/<%= p.images[i] %>"
                                                                class="d-block img" alt="...">
                                                        </div>
                                                        <%} %>
                                                            <%} %>
                                    </div>
                                    <button class="carousel-control-prev" type="button"
                                        data-bs-target="#carouselExampleControls<%= p.id%>" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                        data-bs-target="#carouselExampleControls<%= p.id%>" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <%= p.name %>
                                    </h5>
                                    <p class="card-text">
                                        <%= new Intl.NumberFormat('es-CO', { style: 'currency' , currency: 'COP'
                                            }).format(p.price) %>
                                    </p>
                                </div>
                            </div>
