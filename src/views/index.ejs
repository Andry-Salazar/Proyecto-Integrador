<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head',{url:"/css/index.css"}) %>
<script type='text/javascript' src='/js/carrousel.js'></script>
    <body>
        <%- include('./partials/nav-bar') %>
            <main>
                <div class="lds-dual-ring loader" id="loader"></div>  
                <div class="carrousel">
                    <div class="grande">
                        <img src="/images/logo-banner/1.png" alt="imagen 1" class="imgc">
                        <img src="/images/logo-banner/2.png" alt="imagen 2" class="imgc">
                        <img src="/images/logo-banner/3.png" alt="imagen 3" class="imgc">
                        <img src="/images/logo-banner/4.png" alt="imagen 4" class="imgc">
                        <img src="/images/logo-banner/5.png" alt="imagen 5" class="imgc">
                    </div>
                    <ul class="puntos">
                        <li class="punto activo"></li>
                        <li class="punto"></li>
                        <li class="punto"></li>
                        <li class="punto"></li>
                        <li class="punto"></li>
                    </ul>
                </div>

                <div class="subir">
                    <h2>Productos Destacados</h2>
                </div>
                <section class="productsWrapper">
                    <% for (const p of destacado) { %>
                        <a href="/products/products/<%= p.product_id%>">
                        <article class="products">
                            <img class="imgProducts" src="/images/ropa-deportiva/<%= p.product_image %>" alt="products Set Body Pump" />
                            <p>
                                <%= p.product_name %>
                            </p>
                            <p>
                                <%= new Intl.NumberFormat('es-CO', { style: 'currency' , currency: 'COP'
                                    }).format(p.product_price) %>
                            </p>
                        </article>
                    </a>
                        <% } %>
                </section>

