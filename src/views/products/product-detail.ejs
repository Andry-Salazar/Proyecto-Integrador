<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head',{url:"/css/product-detail.css"}) %>
  <body>
        <%- include('../partials/nav-bar') %>
        <main>
          <div class="container products-wrapper">
             <div class="product-detail">
              <div class="row">
                <div class="col-12 col-lg-8">
                  <img
                    src="<%= product.img %>"
                    alt="product image"
                    class="product-detail-img"
                  />
                  
                </div>
                <div class="col-12 col-lg-4">
                  <article class="product-detail-info">
                    <h2 class="product-detail-title"><%= product.name %></h2>
                    <!-- <p class="product-detail-price small">
                      <span>$PRICE</span>
                      /
                      <b>DISCOUNT % OFF</b>
                    </p>-->
                    <p class="product-detail-price">$<%= product.price%></p>
                    <!-- <p class="product-detail-price small">
                      <span>$<%= product.price %></span>
                    </p> -->

                    <ul class="actions-list">
                      <li>
                        <i class="fas fa-credit-card"></i>
                        <p>Pag√° en 12 cuotas sin interes</p>
                      </li>
                      <li>
                        <i class="fas fa-store"></i>
                        <p>Retiro gratis en locales del vendedor</p>
                      </li>
                    </ul>

                    <a href="#" class="now-button cart-button"
                      >AGREGAR AL CARRITO</a
                    >
                    <a href="#" class="now-button buy-button">COMPRAR AHORA</a>
                    <hr />

                    <a
                      href="/products/edit/<%= product.id %>"
                      class="action-button edit"
                      >EDITAR PRODUCTO</a
                    >
                    <form
                      action="/products/delete/<%= product.id %>?_method=DELETE"
                      method="POST"
                      style="display: inline-flex"
                    >
                      <button class="action-button delete">ELIMINAR</button>
                      
                    </form>
                    <p class="product-detail-description">
                      <%= product.descripcion %>
                    </p>
                  </article>
                </div>
              </div>
            </div>
          </div>
        </main>

        <%- include('../partials/footer') %>
      </div>
    </div>
  </body>
</html>
