<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{url:"/css/edit.css"}) %>

    <body>
        <%- include('../partials/nav-bar') %>
            <main>
                <form class="text-center" action="/products/create" method="POST" enctype="multipart/form-data">
                    <div class="edit-container">
                        <h2 class="text-center">Crea tu producto</h2>
                        <h3 class="text-center">Informacion Del Producto</h3>

                        <div class="form-group mb-4">
                            <label for="exampleFormControlSelect1">Categoria del producto</label>
                            <select class="form-control" id="exampleFormControlSelect1" name="category_id">
                                <% var options=[ "Destacado" , "Deporte" , "Hombre" , "Mujer" , "NiÃ±o" ]; for ( var i=0;
                                    i < options.length; i++ ) { var selected=( category_id==i+1 ) ? "selected" : "" ; %>
                                    <option value="<%=i+1%>" <%=selected %>><%=options[ i ] %>
                                    </option>
                                    <% } %>
                            </select>
                        </div>
                        <div class="form-group mb-4">
                            <label for="exampleInputEmail1">Nombre del producto</label>
                            <input class="form-control" id="product_name" name="product_name" type="text"
                                value="<%=product_name%>">
                            <% if (errorsObj['product_name']) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errorsObj['product_name'] %>
                                </div>
                                <% }%>
                        </div>
                        <div class="form-group mb-4">
                            <label for="exampleInputEmail1">Descripcion del producto</label>
                            <textarea class="form-control" id="product_description" rows="5"
                                name="product_description"> <%=product_description%></textarea>
                            <% if (errorsObj['product_description']) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errorsObj['product_description'] %>
                                </div>
                                <% }%>
                        </div>
                        <div class="form-group mb-4">
                            <label for="exampleInputEmail1">Precio del producto</label>
                            <input class="form-control" id="product_price" name="product_price" type="text"
                                value="<%=product_price%>">
                            <% if (errorsObj['product_price']) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errorsObj['product_price'] %>
                                </div>
                                <% }%>
                        </div>
                        <div class="form-group mb-4">
                            <label class="titulos">Imagenes del producto</label>
                            <input type="file" class="form-control" name="product_image" id="product_image" multiple>
                            <% if (errorsObj['product_image']) { %>
                                <div class="invalid-feedback d-block">
                                    <%= errorsObj['product_image'] %>
                                </div>
                                <% }%>
                        </div>
                        <input class="guardar" value="Guardar" type="submit">
                    </div>
                </form>
            </main>
            <%- include('../partials/footer') %>
    </body>

</html>