                    <label class="titulos">Descripcion del producto</label>
                    <br>
                    <textarea name="descripcion"></textarea>
                    <br>
                    <label class="titulos">Precio Del producto:</label>
                    <br>
                    <input name="price" placeholder="Precio" type="text" >
                    <br>
                    <label class="titulos">Imagen del producto:</label>
                    <br>
                    <input class="boton-imagen" type="file" name="imgProduct">
                    <br>
                    <input class="guardar" value="Guardar" type="submit">
                </form>
            </div>
        </main>
    <%- include('../partials/footer') %>
    </body>
</html>