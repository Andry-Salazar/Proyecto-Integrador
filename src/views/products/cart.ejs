<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head',{url:"/css/cart.css"}) %>

  <body>
    <%- include('../partials/nav-bar') %>
      <main>
        <section id="main">
          <h1>Carrito de compras</h1>
          <div class="detailsWrapper">
            <section class="product">
              <article class="singleProductWrapper">
                <img src="/images/ropa-deportiva/bandas.png" alt="" />
                <div>
                  <p>Set de bandas elasticas</p>
                  <form class="add">
                    <button type="submit" class="left">
                      <i class="fas fa-minus"></i>
                    </button>
                    <input type="text" placeholder="2" name="search" />
                    <button type="submit" class="right">
                      <i class="fas fa-plus"></i>
                    </button>
                  </form>
                  <p><strong>Quitar articulo</strong></p>
                </div>
                <p>$60.000</p>
              </article>
              <article class="singleProductWrapper">
                <img src="/images/ropa-deportiva/conjunto.png" alt="" />
                <div>
                  <p>Conjunto deportivo</p>
                  <form class="add">
                    <button type="submit" class="left">
                      <i class="fas fa-minus"></i>
                    </button>
                    <input type="text" placeholder="2" name="search" />
                    <button type="submit" class="right">
                      <i class="fas fa-plus"></i>
                    </button>
                  </form>
                  <p><strong>Quitar articulo</strong></p>
                </div>
                <p>$120.000</p>
              </article>
            </section>
            <section class="payment">
              <article>
                <table>
                  <thead>
                    <tr>
                      <th colspan="2">Total de carrito</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>Subtotal</td>
                      <td>$180.000</td>
                    </tr>
                    <tr>
                      <td>Envio</td>
                      <td>$10.000</td>
                    </tr>
                    <tr>
                      <td><strong>Total</strong></td>
                      <td><strong>$190.000</strong></td>
                    </tr>
                  </tbody>
                </table>
                <form class="discount">
                  <input type="text" placeholder="Codigo de descuento" />
                  <button class="discountButton">Usar</button>
                </form>
              </article>
            </section>
          </div>
          <h2>Visto recientemente</h2>
          <section class="recentView">
            <div class="products">
              <img class="imgProducts" src="/images/ropa-deportiva/bascula.jpeg" alt="products bascula">
              <p>Bascula Digital</p>
              <p>$68.000</p>
            </div>

            <div class="products">
              <img class="imgProducts" src="/images/ropa-deportiva/colchoneta-yoga.jpg" alt="products colchoneta-yoga">
              <p>Mat de Yoga Doble Fax</p>
              <p>$72.000</p>
            </div>

            <div class="products">
              <img class="imgProducts" src="/images/ropa-deportiva/mancuerna-encauchetada-sportfitness.jpg"
                alt="products mancuerna-encauchetada">
              <p>Mancuerna Encauchetada</p>
              <p>Desde $125.000</p>
            </div>

            <div class="products">
              <img class="imgProducts" src="/images/ropa-deportiva/saco-de-boxeo-23-kg-sportfitness.jpg"
                alt="products saco-de-boxeo">
              <p>Saco de Boxeo 23 KG</p>
              <p>$376.000</p>
            </div>
          </section>
        </section>
      </main>
      <%- include('../partials/footer') %>
  </body>

</html>